<div class="row">
  
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '3' %>
      <h2>Pro Account</h2>
      <p>Gain access to more information with this pro account for <strong>only</strong> $10/month.</p>
    <% else %>
      <h2>Basic Account</h2>
      <p>Sign up for free to the community with this basic account.</p>
    <% end %>
    <div class="well">
      <h2>Sign up</h2>  
      <% if params[:plan] == '3' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
